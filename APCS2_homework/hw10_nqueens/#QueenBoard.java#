/***
 * class QueenBoard
 * Generates solutions for N-Queens problem.
 */

public class QueenBoard
{
  private int[][] _board;
    
  public QueenBoard( int size ) 
  {
    _board = new int[size][size];
  }

  
  /***
   * precondition: board is filled with 0's only.
   * postcondition: 
   * If a solution is found, board shows position of N queens, 
   * returns true.
   * If no solution, board is filled with 0's, 
   * returns false.
   */
  public boolean solve()
  {
    return false;
  }

  
  /**
   *Helper method for solve. 
   */
  private boolean solveH( int col ) 
  {
    return false;
  }


  public void printSolution()
  {
    /** Print board, a la toString...
        Except:
        all negs and 0's replaced with underscore
        all 1's replaced with 'Q'
    */
  }



  //================= YE OLDE SEPARATOR =================

  /***
   * <General description>
   * precondition: board is full of 1s, 0s and negatives 
   * postcondition: 
   *If the spot is 0 
   *A queen is added and all values to the right are updated based on not possible moves 
   *returns true
   *If the spot is not equal to 0
   *returns false */
  private boolean addQueen(int row, int col){
      if(_board[row][col] != 0){ //you can't add a queen to a non 0
	    return false;
    }
    _board[row][col] = 1; //sets row col to 1
    int offset = 1; 
    while(col+offset < _board[row].length){ //marks which moves are impossible
	    _board[row][col+offset]--;
	    if(row - offset >= 0){
        _board[row-offset][col+offset]--;
	    }
	    if(row + offset < _board.length){
        _board[row+offset][col+offset]--;
	    }
	    offset++;
    }
    return true;
  }


  /***
   * <General description>
   * precondition: the board is full of 0s, 1s, and negatives
   * postcondition: 
   *If the spot is not equal to 1
   *returns false
   *If the spot is equal to 1
   *Queen is removed and all values to the right of the board are updated
   *returns true
   */
  private boolean removeQueen(int row, int col){
      if ( _board[row][col] != 1 ) { //you can't remove a queen if it isn't there
	    return false;
    }
    _board[row][col] = 0;
    int offset = 1;

    while( col+offset < _board[row].length ) { //updates values based on which moves are possible 
	    _board[row][col+offset]++;
	    if( row - offset >= 0 ) {
        _board[row-offset][col+offset]++;
	    }
	    if( row + offset < _board.length ) {
        _board[row+offset][col+offset]++;
	    }
	    offset++;
    }
    return true;
  }


  /***
   * <General description>
   * precondition: board is full of 1s, 0s and negatives 
   * postcondition: board is returned as a string
   */
  public String  toString() 
  {
    String ans = "";
    for( int r = 0; r < _board.length; r++ ) {
	    for( int c = 0; c < _board[0].length; c++ ) {
        ans += _board[r][c]+"\t";
	    }
	    ans += "\n";
    }
    return ans;
  }


  //main method for testing...
  public static void main( String[] args )
  {
    QueenBoard b = new QueenBoard(5);
    System.out.println(b);
    b.addQueen(3,0);
    b.addQueen(4,0);
    System.out.println(b);
    b.addQueen(0,1);
    b.removeQueen(4,1);
    System.out.println(b);
    b.removeQueen(3,0);
    System.out.println(b);
  }
    
}//end class
